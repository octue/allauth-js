{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
  "trailingCommas": "all"
    }
  },
  "files": {
    "include": ["src", "allauth", "vite.config.ts", "tsconfig*.json", "package.json"],
    "ignore": ["dist", "node_modules", ".yarn"]
  }
}
